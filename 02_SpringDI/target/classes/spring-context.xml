		<!-- 2. 생성자를 이용하는 방법 멤버변수를 초기화하며 DI 의존성 주입을 하는 방법
		 -->
		<bean id="customer" class="org.kh.customer.domain.Customer">
			<constructor-arg value="2"></constructor-arg>
			<constructor-arg value="이용자"></constructor-arg>
			<constructor-arg value="경기도"></constructor-arg>
			<constructor-arg value="user02@iei.or.kr"></constructor-arg>
		</bean>
		
		<!--  A 객체에 B객체를 주입 : ref를 이용한다 -->
		
		<!-- bean등록: CustomerStoreLogic -->
		<bean id="CustomerStore" class="org.kh.customer.store.logic.CustomerStoreLogic"></bean>
		
		
		
		<!-- set메서드 이용한 bean등록: CustomerServiceImpl
			 setStore를 이용해서 CustomerServiceImpl <- customerStore 에대한 의존성 주입(DI)   -->
		<bean id="ustomerService" class="org.kh.customer.service.logic.CustomerServiceImpl"> <!-- bean등록 -->
			<property name="store" ref="customerStore"></property> <!-- 의존성 주입 -->
																<!--  CustomerServiceImpl의 name=store => setter메서드의 이름이다 -->
		</bean>
		
		
		
		
