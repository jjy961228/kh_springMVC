<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<settings>
		<setting name="jdbcTypeForNull" value="NULL"/>
		<!-- 만약에 null 데이터가 전달되었으면 빈칸이 아닌 NULL로 인식하도록 설정 -->
	</settings>
	<typeAliases>
		<!-- type = board-mapper.xml의 parameterType , alias: type대신 쓸 이름  -->
		<typeAlias type="org.kh.nexapring.board.domain.Board" alias="Board"/>
		<typeAlias type="org.kh.nexapring.board.domain.Reply" alias="Reply"/>
	</typeAliases>
	
	<!-- mapper의 위치 설정 -->
	<mappers>
		<mapper resource="mappers/board-mapper.xml"/>
		<mapper resource="mappers/member-mapper.xml"/>
	</mappers>
</configuration>