<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans https://www.springframework.org/schema/beans/spring-beans.xsd">
<!-- 모두 눈에 보이지않는 클래스이지만 MAVEN으로 라이브로리 등록했어서 모두 쓸 수 있다
 		오타있으면 동작하지않는다 dbcp이용 -->	
	
	<!-- Root Context: defines shared resources visible to all other web components -->
	<!-- 변하면 안되는 것들이다 -->
	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close"> <!-- bean등록 -->
		<property name="driverClassName" 	value="oracle.jdbc.driver.OracleDriver"></property> <!-- 의존성주입:set메서드 이용  -->
		<property name="url" 				value="jdbc:oracle:thin:@localhost:1521:xe"></property>
		<property name="username" 			value="SPRING"></property>
		<property name="password" 			value="SPRING"></property>
	</bean>
	
	
	
	<bean id="sqlSession" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="configLocation" value="classpath:mybatis-config.xml"></property>
		<property name="dataSource" ref="dataSource"></property>
	</bean>
	<bean id="sqlSessionTemplate" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg ref="sqlSession"></constructor-arg>
	</bean>
	<!-- 파일 업로드 관련 bean 등록, MultipartResolver -->
	<bean id="multipartResolver" 
		class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<property name="maxUploadSize" value="100000000"></property>
		<property name="maxInMemorySize" value="100000000"></property>
	</bean>
</beans>
